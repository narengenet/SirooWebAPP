@page
@model SirooWebAPP.UI.Pages.Superadmins.AddRoleModel

@{
    Layout = "_LayoutClients";
}

<form method="post" enctype="multipart/form-data">

    <div class="container">
        <div class="row">&nbsp;</div>

        <div class="row">
            <div class="col-2">نام نقش *</div>
            <div class="col-8">
                <input type="text" asp-for="AddRole.Name"></input> <span asp-validation-for="AddRole.Name"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-2">توضیحات نقش *</div>
            <div class="col-8">
                <input type="text" asp-for="AddRole.Description"></input> <span asp-validation-for="AddRole.Description"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-2">فعال است</div>
            <div class="col-4">
                <input type="checkbox" asp-for="AddRole.isActive"></input>
            </div>
        </div>


        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col-6">
                <input type="submit" value="Submit" asp-page-handler="AddRole" />
            </div>
        </div>
        <div class="row">
            <div class="col-4">
                @Model.ResultMessage
            </div>
        </div>

    </div>

</form>

@section Scripts {
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}