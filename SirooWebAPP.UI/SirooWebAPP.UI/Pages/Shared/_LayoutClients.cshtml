        function pointUpdated(val) {
            newval = parseInt(val);
            oldval = parseInt($('#currentPoint').text());
            if (newval != oldval) {
                //alert('Congrat!!');
                $('#currentPoint').text(newval + oldval);
            }
        }
        function diamondUpdated(val) {
            newval = parseInt(val);
            oldval = parseInt($('#currentDiamond').text());
            if (newval != oldval) {
                //alert('Congrat!!');
                $('#currentDiamond').text(newval + oldval);
            }
        }
        function backtotop() {
            $("html, body").animate({ scrollTop: 0 }, 1000);
        }

        function waiting() {
            if ($('.waitingPlease').css('display') == 'flex') {
                $('.waitingPlease').css('display', 'none');
            } else {
                $('.waitingPlease').css('display', 'flex');
            }

        }



        var qs = (function (a) {
            if (a == "") return {};
            var b = {};
            for (var i = 0; i < a.length; ++i) {
                var p = a[i].split('=', 2);
                if (p.length == 1)
                    b[p[0]] = "";
                else
                    b[p[0]] = decodeURIComponent(p[1].replace(/\+/g, " "));
            }
            return b;
        })(window.location.search.substr(1).split('&'));
